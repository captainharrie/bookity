{% card null, "bg-body-tertiary rounded-0"%}
<pre style="white-space:pre-wrap;" >
  {% raw %}
  {% for book, chapters in collections.library %}
    {{book}}:
    &lt;ul&gt;
      {% for chapter in chapters %}
        {% set linkText = "" %}
        {% if "title" in chapter.settings %}
          {% set title = chapter.settings.title %}
        {% else %}
          {% set title = chapter.fileInfo.fileSlug %}
        {% endif %}
        
        &lt;li&gt;&lt;a href=&quot;{{chapter.fileInfo.url}}&quot;&gt;{{linkText}}&lt;/a&gt;&lt;/li&gt;
      {% endfor %}
    &lt;/ul&gt;
  {% endfor %}
  {% endraw %}
</pre>
{% endcard %}

<br>

